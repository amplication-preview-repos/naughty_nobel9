datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserQuery {
  createdAt DateTime                @default(now())
  id        String                  @id @default(cuid())
  queryText String?
  queryType EnumUserQueryQueryType?
  response  String?
  updatedAt DateTime                @updatedAt
  userId    String?
}

model StudyMaterial {
  content    String?
  createdAt  DateTime @default(now())
  gradeLevel Int?
  id         String   @id @default(cuid())
  subject    String?
  title      String?
  updatedAt  DateTime @updatedAt
}

model ProblemSolution {
  createdAt    DateTime @default(now())
  gradeLevel   Int?
  id           String   @id @default(cuid())
  problemText  String?
  solutionText String?
  subject      String?
  updatedAt    DateTime @updatedAt
}

model Flashcard {
  content    String?
  createdAt  DateTime @default(now())
  gradeLevel Int?
  id         String   @id @default(cuid())
  subject    String?
  title      String?
  updatedAt  DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumUserQueryQueryType {
  Option1
}
